.detail_swiper swiper {
  height: 65vw;
  text-align: center;
}
.detail_swiper swiper image {
  width: 60%;
}
.goods_price {
  color: var(--themeColor);
  padding: 0rpx 20rpx;
  font-size: 35rpx;
  font-weight: 400;
}
.goods_name_collect {
  display: flex;
  padding: 10rpx 10rpx;
}
.goods_name_collect .goods_name {
  flex: 7;
  color: gray;
  font-size: 30rpx;
  border-right: 1px solid gray;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  padding: 0rpx 10rpx;
}
.goods_name_collect .goods_collect {
  flex: 2;
  text-align: center;
}
.goods_name_collect .goods_collect .goods_collect_text {
  color: gray;
  font-size: 25rpx;
}
.goods_info .goods_info_title {
  color: var(--themeColor);
  padding: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
}
