<!--components/Tabs/Tabs.wxml-->

<view class="tabs">
    <view class="tab_title_bar">
        <view 
        class="tab_title_item {{item.isActive?'tab_title_item_active':''}}" 
        wx:for="{{tabs}}" 
        wx:key="id"
        bindtap="handleItemTap"
        data-index="{{index}}">
            {{item.title}}
        </view>
    </view>
    <view class="tab_content">
        内容
    </view>
</view>
  